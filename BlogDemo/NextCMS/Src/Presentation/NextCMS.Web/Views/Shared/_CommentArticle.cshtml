@model IEnumerable<XCode.Web.Models.Articles.ArticleModel>
@{ var i = 1; }

<div class="side-content">
    <h2 class="title">评论排行</h2>
    <ul>
        @foreach (var article in Model)
        {
            <li><span class="@if(i > 3){ @("normal") }else{ @("tophit")}">@i</span><div><a href="@Url.Action("Detail", "Article", new { id = @article.Id})" title="@article.Title">@(article.Title + "(" + article.CommentCount + ")")</a></div></li>
            i++;
        }
    </ul>
</div>