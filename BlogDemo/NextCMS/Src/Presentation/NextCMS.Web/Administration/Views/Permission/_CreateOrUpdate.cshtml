@model XCode.Admin.Models.Authen.PermissionModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="tabbable tabbable-custom tabbable-full-width">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#tab_1" data-toggle="tab">基本信息</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-2">权限名称</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
                        <span class="help-block">
                            @Html.ValidationMessageFor(t => t.Name)
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">父权限</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.ParentId, Model.AvailablePermissions, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">图标</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Icon, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">控制器(Controller)</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Controller, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">动作(Action)</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Action, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">排序</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.DisplayOrder, new { @class = "form-control" })
                        <span class="help-block">
                            @Html.ValidationMessageFor(t => t.DisplayOrder)
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">已启用</label>
                    <div class="col-md-4">
                        <div class="checkbox-list">
                            <label class="checkbox-inline">
                                @*<div class="checker" id="uniform-inlineCheckbox21">
                                <span class="">*@
                                    @Html.CheckBoxFor(t => t.Active)
                                @*</span>
                                </div>*@
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


