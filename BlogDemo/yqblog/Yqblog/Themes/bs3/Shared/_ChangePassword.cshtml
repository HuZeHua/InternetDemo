@using lang = Resource.Web; 
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "changePasswordForm", @class = "form-horizontal", role = "form" }))
{
    <div>
        <div class="form-group">
            <label for="OldPassword" class="col-sm-2 control-label"><span>@lang.OldPassword</span></label>
            <div class="col-sm-10 input-wrap">
                <div class="col-sm-3"><input value="" class="form-control" type="password" name="OldPassword" id="OldPassword" autocomplete="off"/></div>
                <span class="form_tip"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="NewPassword" class="col-sm-2 control-label"><span>@lang.NewPassword</span></label>
            <div class="col-sm-10 input-wrap">
                <div class="col-sm-3"><input value="" class="form-control" type="password" name="NewPassword" id="NewPassword" autocomplete="off"/></div>
                <span class="form_tip"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label for="ConfirmPassword" class="col-sm-2 control-label"><span>@lang.ConfirmPassword</span></label>
            <div class="col-sm-10 input-wrap">
                <div class="col-sm-3"><input value="" class="form-control" type="password" name="ConfirmPassword" id="ConfirmPassword" autocomplete="off"/></div>
                <span class="form_tip"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="summary_tip_wrap"><p class="summary_tip"></p></div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 loadingwrap">
                <a class="btn btn-default" id="BtnChangePassword">@lang.Ok</a>
            </div>
        </div>
    </div>
}
<div id="changePasswordSuccess" class="nodisplay">@lang.Tip_ChangePasswordSuccess <a id="backToChangePassword">@lang.Back</a></div>