@model Anycmd.Engine.Edi.Abstractions.IElement
<div rel="@Request.RawUrl">
    @{
        if (this.CurrentUser().IsDeveloper()) {
        <a class="btnTooltip" href="@Url.Action("TooltipEdit", new { elementId = Model.Id })" target="_blank">编辑</a>
        <a class="btnTooltip" href="@Url.Action("TooltipEdit", new { elementId = Model.Id })" onclick="helper.refreshTooltip(this);return false;" iconcls="icon-reload">刷新</a>
        }
    }
    @Html.Raw(Model.Tooltip)
</div>
