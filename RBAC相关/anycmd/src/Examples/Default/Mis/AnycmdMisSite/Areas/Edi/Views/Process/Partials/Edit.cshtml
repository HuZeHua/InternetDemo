@model string
@{
	var prifix = Model;
	var codespace = ViewContext.RouteData.DataTokens["area"].ToString();
	var entityTypeCode = ViewContext.RouteData.Values["Controller"].ToString();
}
<form id="@(prifix)form1" method="post">
	<input name="Id" class="mini-hidden" />
	<div style="padding-left: 11px; padding-bottom: 5px;">
		<table>
			<tr>
				<td>@Html.GetProperty("Name", entityTypeCode, codespace).Name：
				</td>
				<td>
					<input name="Name" class="mini-textbox" required="true" />
					@Html.Qtip("Name", entityTypeCode, codespace)
				</td>
				<td>@Html.IconLabel("OntologyId", entityTypeCode, codespace)：</td>
				<td>
					<input name="OntologyId" class="mini-combobox" style="width: 100px;"
						textfield="name" valuefield="id" required="true"
						data="@Html.OntologiesJsonArray()" />
					@Html.Qtip("OntologyId", entityTypeCode, codespace)
				</td>
			</tr>
			<tr>
				<td>
					@Html.IconLabel("Type", entityTypeCode, codespace)：
				</td>
				<td>
					<input name="Type" class="mini-combobox" required="true"
						textfield="name" valuefield="code" shownullitem="false"
						data="[{name:'命令执行器',code:'CommandExecutor'},{name:'命令分发器',code:'CommandDispatcher'}]" />
					@Html.Qtip("Type", entityTypeCode, codespace)
				</td>
				<td>@Html.GetProperty("IsEnabled", entityTypeCode, codespace).Name：
				</td>
				<td>
					<input name="IsEnabled" class="mini-checkbox" text="是否有效？" truevalue="1" falsevalue="0" />
					@Html.Qtip("IsEnabled", entityTypeCode, codespace)
				</td>
			</tr>
			<tr>
				<td>@Html.GetProperty("Description", entityTypeCode, codespace).Name：
				</td>
				<td colspan="3">
					<input name="Description" class="mini-textarea" style="width: 352px; height: 100px;" />
					@Html.Qtip("Description", entityTypeCode, codespace)
				</td>
			</tr>
		</table>
	</div>
</form>
