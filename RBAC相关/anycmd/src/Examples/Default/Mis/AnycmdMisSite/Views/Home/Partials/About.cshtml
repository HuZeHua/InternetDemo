@using Anycmd.Util
@using System.Linq
@using System.Reflection
@using Anycmd.Engine.Host
@{
    long totalMemory = GC.GetTotalMemory(true);
    var mb = totalMemory / (1024 * 1024);
    Func<Assembly, JitMode> getJitMode = (assembly) =>
    {
        var att = assembly.GetCustomAttribute<System.Diagnostics.DebuggableAttribute>();
        if (att == null)
        {
            return JitMode.Unknown;
        }
        return att.IsJITTrackingEnabled ? JitMode.Debug : JitMode.Release;
    };
}
